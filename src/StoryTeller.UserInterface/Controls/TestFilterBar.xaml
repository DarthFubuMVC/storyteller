<UserControl x:Class="StoryTeller.UserInterface.Controls.TestFilterBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Workspace="clr-namespace:StoryTeller.UserInterface.Workspace">
    <StackPanel Orientation="Vertical" Background="{DynamicResource SelectedBackgroundBrush}">
        
        <StackPanel Margin="5 2 2 5" Name="resultPanel" Orientation="Horizontal">
            <TextBlock Width="136">Some text here</TextBlock>
        </StackPanel>
        <StackPanel Margin="5 2 2 5" Name="lifecyclePanel" Orientation="Horizontal">
            <TextBlock>Some text here</TextBlock>
        </StackPanel>
        <StackPanel Margin="5 0 0 5" Name="tagsPanel" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Padding="2">Tags:</TextBlock>
            <TextBox Height="23" Name="tagsFilter" Width="170" Margin="2 2 2 2" />
            <Button Content="Apply" Width="40" Name="btnApply" Margin="2 2 2 2" Click="btnApply_Click" />
            <Button Content="Clear" Width="40" Name="btnClear" Margin="2 2 2 2" Click="btnClear_Click" />
        </StackPanel>
    </StackPanel>
</UserControl>
