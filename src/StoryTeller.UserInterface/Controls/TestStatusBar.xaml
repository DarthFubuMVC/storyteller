<UserControl x:Class="StoryTeller.UserInterface.Controls.TestStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="35" >
    <StackPanel Orientation="Horizontal" Margin="5">
        <Grid Name="progressArea" MinWidth="450">
            <ProgressBar Name="progressBar" Foreground="Blue" Background="White"  Value="50" />

            <Viewbox>
                <TextBlock Name="testName" Text='Loading ... different text' TextAlignment="Left"/>
            </Viewbox>
        </Grid>
        <Label Name="status" Height ="25" Margin="10 0 0 0" VerticalAlignment="Center" Foreground="Black" VerticalContentAlignment="Center">here will be the text</Label>
    </StackPanel>
</UserControl>
