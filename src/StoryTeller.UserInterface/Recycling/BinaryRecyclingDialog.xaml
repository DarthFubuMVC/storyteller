<Window x:Class="StoryTeller.UserInterface.Recycling.BinaryRecyclingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ShowInTaskbar="False"  WindowStartupLocation="CenterOwner" WindowStyle="None" Title="Recycling Fixtures" Visibility="Visible" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Padding="3" Background="LightGray">

    <Window.Resources>
        <Style x:Key="myStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Gray" />
        </Style>
    </Window.Resources>
    
    <StackPanel Orientation="Vertical">
        <Label FontWeight="Bold" Margin="5" Foreground="Black" FontSize="16">Recycling Fixtures</Label>
        <Grid Name="progressArea" Width="300" Height="25" Margin="5">
            <ProgressBar Name="progressBar" Value="0" Maximum="100" Style="{StaticResource myStyle}"/>

            <Viewbox>
                <TextBlock Margin="0 5 0 5" Name="progressText" Text='Loading ... different text' TextAlignment="Left"/>
            </Viewbox>
        </Grid>
    </StackPanel>  
</Window>