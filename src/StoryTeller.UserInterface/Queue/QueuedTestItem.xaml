<UserControl x:Class="StoryTeller.UserInterface.Queue.QueuedTestItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" Margin="0 2 0 2">
        <Button Name="stop" ClickMode="Release" Width="25" Height="25" ToolTip="Click to cancel this test">
            <Image Source="../Icons/stop.png"></Image>
        </Button>
        
        <TextBlock Height="25" Margin="5 0 0 0">
            <Hyperlink Name="link" ><Hyperlink.TextDecorations><TextDecorationCollection /></Hyperlink.TextDecorations><Label Height="25" Name="linkText" VerticalAlignment="Center" VerticalContentAlignment="Center">some text will go here</Label></Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
