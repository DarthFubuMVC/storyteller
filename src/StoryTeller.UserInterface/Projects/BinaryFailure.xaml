<UserControl x:Class="StoryTeller.UserInterface.Projects.BinaryFailure"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="300" MinWidth="500" MaxWidth="500">
    <Border BorderBrush="Black" BorderThickness="2">
        <DockPanel>
            <Label DockPanel.Dock="Top" HorizontalAlignment="Stretch" FontWeight="Bold" Background="Silver">Binary Recycle Failure!</Label>
            <StackPanel DockPanel.Dock="Bottom" Background="Silver" Orientation="Horizontal" FlowDirection="RightToLeft" Height="40">
                <Button Name="close" Width="150" HorizontalAlignment="Right" Margin="4">Close</Button>
                <Button Name="retry" Width="100" HorizontalAlignment="Right" Margin="4">Retry</Button>
            </StackPanel>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBox Name="errorText" FontFamily="Courier New">Error text</TextBox>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
