<Window x:Class="StoryTellerUI.ErrorMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Unexpected Error" Height="300" Width="500" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <ScrollViewer>
            <TextBox Name="errorText" FontFamily="Courier New">Error text</TextBox>
        </ScrollViewer>
    </DockPanel>
</Window>
