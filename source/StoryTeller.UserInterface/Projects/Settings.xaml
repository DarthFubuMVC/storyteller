<UserControl x:Class="StoryTeller.UserInterface.Projects.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:StoryTeller.UserInterface.Controls"
    >
    <DockPanel Background="Silver">
        <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="0 0 0 2">
            <Label FontWeight="Bold" Background="Silver">Settings</Label>
        </Border>

        <Controls:TestStopConditionsView DockPanel.Dock="Bottom" x:Name="stopConditions" Background="Silver"></Controls:TestStopConditionsView>
        <Label DockPanel.Dock="Top">
            <Hyperlink Name="newProjectLink">
                <TextBlock>Create New Project</TextBlock>
            </Hyperlink>
        </Label>
        <Label DockPanel.Dock="Top">
            <Hyperlink Name="loadProjectLink">
                <TextBlock>Load Existing Project</TextBlock>
            </Hyperlink>
        </Label>
        <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="0 2 0 2">
            <Label FontWeight="Bold">Projects</Label>
        </Border>
        <StackPanel Orientation="Vertical" Background="White" Name="projectList" Margin="5">
            <Label>Something</Label>
            <Label>Something Else</Label>
            <Label>Even More</Label>
        </StackPanel>
    </DockPanel>
</UserControl>
