<UserControl x:Class="StoryTeller.UserInterface.Projects.ProjectLoadFailure"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="300" MinWidth="500" HorizontalAlignment="Stretch">
    <Border BorderBrush="Black" BorderThickness="2">
        <DockPanel>
            <Label DockPanel.Dock="Top" HorizontalAlignment="Stretch" FontWeight="Bold" Background="Silver">Project Load Failure! Do you wish to remove this project from the history?</Label>
            <StackPanel DockPanel.Dock="Bottom" Background="Silver" Orientation="Horizontal" FlowDirection="RightToLeft" Height="40">
                <Button Name="no" Width="150" HorizontalAlignment="Right" Margin="4">No</Button>
                <Button Name="yes" Width="150" HorizontalAlignment="Right" Margin="4">Yes</Button>                
            </StackPanel>
            <ScrollViewer>
                <TextBox Name="errorText" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" FontFamily="Courier New">Error text</TextBox>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
