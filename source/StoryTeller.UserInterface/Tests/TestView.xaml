<UserControl x:Class="StoryTeller.UserInterface.Tests.TestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Tests="clr-namespace:StoryTeller.UserInterface.Tests" Background="{DynamicResource SelectedBackgroundBrush}">
    <DockPanel Name="mainDock" HorizontalAlignment="Stretch">
        <Tests:TestHeaderView x:Name="header" DockPanel.Dock="Top"></Tests:TestHeaderView>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentControl Name="content"></ContentControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
