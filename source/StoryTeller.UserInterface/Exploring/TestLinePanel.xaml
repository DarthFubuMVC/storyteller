    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Name="mainPanel" Orientation="Horizontal">
        <StackPanel Name="namePanel" Orientation="Horizontal">
            <Button Name="run">
                <Image Source="..\Icons\run.png" Width="16" Height="16"></Image>
