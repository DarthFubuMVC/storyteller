<UserControl x:Class="StoryTeller.UserInterface.Queue.QueuedTestItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <Button Name="stop" ClickMode="Release" Width="25" Height="25" ToolTip="Click to cancel this test">
            <Image Source="../Icons/stop.png"></Image>
        </Button>
        
        <TextBlock>
            <Hyperlink Name="link"><Label Name="linkText"></Label></Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
