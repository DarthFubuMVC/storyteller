<UserControl x:Class="StoryTeller.UserInterface.Controls.TestStopConditionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="Black" BorderThickness="2" Margin="5">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <Label FontWeight="Bold" Background="Silver">Test Execution Options:  </Label>
        <CheckBox Name="wrongs" Margin="5 5 0 5">Stop on the first failure</CheckBox>
        <CheckBox Name="exceptions" Margin="5 5 0 5">Stop on the first exception</CheckBox>
        <StackPanel Orientation="Horizontal">
            <Label>Timeout in seconds</Label>
            <TextBox Name="timeout" Width="40" VerticalAlignment="Center" BorderBrush="Black" Margin="0,0,10,0">30</TextBox>
        </StackPanel>
    </StackPanel>
        </Border>
</UserControl>
