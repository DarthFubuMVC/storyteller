<UserControl x:Class="StoryTeller.UserInterface.Controls.TestFilterBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" Height="30">
        <Button Name="runAll" ClickMode="Release" ToolTip="Click to run all tests">
            <Image Source="../Icons/runAll.png"></Image>
        </Button>

        <StackPanel Margin="25 0 0 0" Name="resultPanel" Orientation="Horizontal">
            <TextBlock>Some text here</TextBlock>
        </StackPanel>

        <StackPanel Margin="25 0 0 0" Name="lifecyclePanel" Orientation="Horizontal">
            <TextBlock>Some text here</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
